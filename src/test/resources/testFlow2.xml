<suite name="TestPaymentFlow">

    <test name="login">
        <classes>
            <class name="org.bl.json.jersey.test.TestAuth" >
                <methods>
                    <include name=".*authLogin"/>
                    <exclude name=".*authLogout"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="homepage">
        <classes>
            <class name="org.bl.json.jersey.test.TestCategory" />
        </classes>
    </test>

    <test name="notification">
        <classes>
            <class name="org.bl.json.jersey.test.TestNotification" />
        </classes>
    </test>

    <test name="venue">
        <classes>
            <class name="org.bl.json.jersey.test.TestVenue" />
        </classes>
    </test>

    <test name="user">
        <classes>
            <class name="org.bl.json.jersey.test.TestUser" >
                <methods>
                    <include name=".*userProfile"/>
                    <exclude name=".*userAgent"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="offer">
        <classes>
            <class name="org.bl.json.jersey.test.TestOffer" />
        </classes>
    </test>

    <test name="reservation">
        <classes>
            <class name="org.bl.json.jersey.test.TestReservation" />
        </classes>
    </test>

    <test name="logout">
        <classes>
            <class name="org.bl.json.jersey.test.TestAuth" >
                <methods>
                    <include name=".*authLogout"/>
                    <exclude name=".*authLogin"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>